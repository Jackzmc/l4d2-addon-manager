{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "l4d2-addon-manager",
  "version": "2.0.0",
  "identifier": "me.jackz.l4d2-addon-manager",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "L4D2 Addons Manager",
        "width": 1024,
        "height": 768 
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
