{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "l4d2-addon-manager",
  "version": "2.0.0-1",
  "identifier": "me.jackz.l4d2-addon-manager",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "L4D2 Addons Manager",
        "width": 1210,
        "height": 768 
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEI5MTdBODg0Q0Q0MkUzMjcKUldRbjQwTE5oS2dYdVorTktybTRwbWtvcDE5bnR5ekYwYklQVUs3aitFaHpuVmxZU09xbmxPc3gK",
      "endpoints": [
        "https://dl.jackz.me/l4d2-addon-manager/update-check.php?arch={{arch}}&os={{target}}&v={{current_version}}",
        "https://github.com/jackzmc/l4d2-addon-manager/releases/latest/download/latest.json"
      ]
    }
  }
}
